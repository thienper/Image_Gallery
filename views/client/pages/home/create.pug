extends ../../layouts/default.pug
block main
    .content-create
        h1 Thêm Mới 1 Hình 
        form(
            action=`/create?_method=POST`,
            id="form-create-image",
            method="POST"
            class="form",
            enctype="multipart/form-data"
        )
          div(class="frame")
            div(class="form-group")
                label(for="title") Tên Hình 
                input(
                    class="form-control"
                    type="text",
                    id="title", 
                    name="title",
                    required
                    ) 
            div(
              class="form-group",
              upload-image-create
              )
              label(
                for="", 
                data-toggle="modal",
                data-target="#myModal"  
                class="choose-img",
                type="button"
              ) Chọn Ảnh
                input(
                    class="form-control myImg"
                    type="file",
                    id="thumbnail",
                    name="thumbnail",
                    accept ="image/*",
                    upload-image-input-create
                ) 
                div(class="img-close")
                  img(
                    src="",
                    alt="",
                    class="img-mini"
                    upload-image-preview-create
                  )
                  button(type="button" img-close-create class="img-close") X
          div(class="form-group")
            button(
              type="submit",
              class="btn btn-primary"
            ) Tạo mới













